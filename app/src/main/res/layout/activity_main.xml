<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/MainContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:paddingTop="40dp"
        android:textSize="40sp"
        android:text="00.00"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

    </TextView>

    <TextView
        android:id="@+id/txtFullMath"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/MainContainer"
        android:textColor="#696969"
        android:text="00.00"
        android:textSize="20sp"
        android:layout_margin="5dp"
        android:paddingRight="15dp">

    </TextView>

    <Button
        android:id="@+id/num7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:textColor="@color/white"
        android:layout_margin="2dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintBottom_toTopOf="@id/num4"
        app:layout_constraintLeft_toLeftOf="parent">
    </Button>

    <Button
        android:id="@+id/num8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:textColor="@color/white"
        android:layout_margin="2dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintBottom_toTopOf="@id/num5"
        app:layout_constraintLeft_toRightOf="@id/num7">
    </Button>

    <Button
        android:id="@+id/num9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:textColor="@color/white"
        android:layout_margin="2dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintBottom_toTopOf="@id/num6"
        app:layout_constraintLeft_toRightOf="@id/num8">
    </Button>

    <Button
        android:id="@+id/actionDiv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="รท"
        android:textColor="@color/white"
        android:layout_margin="2dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintBottom_toTopOf="@id/actionSub"
        app:layout_constraintLeft_toRightOf="@id/num9">
    </Button>

    <LinearLayout
        android:id="@+id/BottomLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
        android:id="@+id/num0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="0"
            android:layout_weight="1"
        android:textColor="@color/white">
    </Button>

        <Button
            android:id="@+id/actionEqual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="="
            android:layout_weight="1.5"
            android:textColor="@color/white"
            android:layout_margin="2dp">
        </Button>

        <Button
            android:id="@+id/actionMultiply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="X"
            android:layout_weight="1.5"
            android:textColor="@color/white"
            android:layout_margin="2dp">
        </Button>

    </LinearLayout>

    <Button
        android:id="@+id/actionPlus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="+"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/BottomLayout"
        app:layout_constraintRight_toRightOf="parent">
    </Button>

    <Button
        android:id="@+id/num3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="3"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/BottomLayout"
        app:layout_constraintRight_toLeftOf="@id/actionPlus">

    </Button>

    <Button
        android:id="@+id/num2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="2"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/BottomLayout"
        app:layout_constraintRight_toLeftOf="@id/num3">

    </Button>

    <Button
        android:id="@+id/num1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="1"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/BottomLayout"
        app:layout_constraintRight_toLeftOf="@id/num2">

    </Button>

    <Button
        android:id="@+id/actionSub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="-"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/actionPlus"
        app:layout_constraintRight_toRightOf="parent">

    </Button>

    <Button
        android:id="@+id/num6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="6"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/num3"
        app:layout_constraintRight_toLeftOf="@id/actionSub">

    </Button>

    <Button
        android:id="@+id/num5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="5"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/num2"
        app:layout_constraintRight_toLeftOf="@id/num6">

    </Button>

    <Button
        android:id="@+id/num4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="4"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/num1"
        app:layout_constraintRight_toLeftOf="@id/num5">

    </Button>

    <Button
        android:id="@+id/btnClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="Clear"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/actionDiv"
        app:layout_constraintRight_toRightOf="parent">

    </Button>


</androidx.constraintlayout.widget.ConstraintLayout>